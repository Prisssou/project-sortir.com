{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Ajouter une ville <i class="fas fa-map-marked-alt"></i>
    </h1>

<div class="container">

        <div class="contenantForm col-lg-8 align-self-center">

            {{ form_start(villeFormView) }}

               {{ form_widget(villeFormView.nom) }}
               {{ form_errors(villeFormView.nom) }}

                {{ form_widget(villeFormView.codesPostaux) }}
                {{ form_errors(villeFormView.codesPostaux) }}

                {{ form_widget(villeFormView.departement) }}
                {{ form_errors(villeFormView.departement) }}

            <div class="col-sm-12 text-center">

                <input class="btn blue-gradient btn-block btn-rounded z-depth-1a" style="background-color: #142340;
                color: #FFC952;" type="submit" name="submitAction" value="Enregistrer"><br>

                {{ form_end(villeFormView) }}

                <a href="{{ path('home') }}"><input class="btn blue-gradient btn-block btn-rounded z-depth-1a" style="background-color: #142340;
                color: #FFC952;" type="button" value="Annuler"></a>
            </div>
        </div>

    </div>
        <div class="col-lg-2"></div>


            {% endblock %}



        {% block title %}
        Ajout de ville
{% endblock %}